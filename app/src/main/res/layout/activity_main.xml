<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisenrique.formulario.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-1dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iTop"
            android:hint="@string/iName">

            <EditText
                android:id="@+id/iName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iTop"
            android:text="@string/fecha"
            android:textColor="@color/negro"
            android:textSize="@dimen/textoFechaNacimiento" />

        <DatePicker
            android:id="@+id/iFecha"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/calendar"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopCalendar"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:minDate="2000"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/iTel">

            <EditText
                android:id="@+id/iTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iTop"
            android:hint="@string/iEmail">

            <EditText
                android:id="@+id/iEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iTop"
            android:hint="@string/iDescripcion">

            <EditText
                android:id="@+id/iDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iTopBtn"
            android:text="@string/btnEnviar"
            android:theme="@style/raisedButton" />


    </LinearLayout>




</ScrollView>
